{
    "source": {
        "include": ["package/dist.js"],
        "includePattern": ".js$"
    },

    "plugins": ["plugins/markdown"],

    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "theme": "dark",
            "title": "oxvs-server",
            "footer": "<a href='https://github.com/0aoq/oxvs-server'>OXVS-SERVER</a>",
            "menu": [
                {
                    "title": "oxvs",
                    "id": "oxvshome",
                    "link": "https://oxvs.net"
                },
                {
                    "title": "Zerobase",
                    "id": "zerobasehome",
                    "link": "https://zbase.dev"
                }
            ],
            "resizeable": {
                "navbar": {
                    "min": "300",
                    "max": "600"
                }
            },
            "favicon": "https://zbase.dev/favicon.png",
            "meta": [
                {
                    "name": "Author",
                    "content": "hkau"
                },
                {
                    "name": "Description",
                    "content": "Documentation for @oxvs.net/oxvs-server"
                }
            ]
        }
    }
}